<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="4"
        android:layout_marginBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <Button
            android:id="@+id/btn1"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="1"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="2"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="3"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="4"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="5"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="6"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="7"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="8"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="9"
            android:textColor="#000000"
            android:textFontWeight="900"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btnVCS"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:backgroundTint="#1C31A8"
            android:onClick="readCSV"
            android:text="VCS"
            android:textColor="#ffffff"
            android:textSize="43dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="0"
            android:textColor="#000000"
            android:textSize="60dp" />

        <Button
            android:id="@+id/button19"

            android:layout_width="118dp"
            android:layout_height="95dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:backgroundTint="#1C31A8"
            android:onClick="readCSVaquillas"
            android:text="VQS"
            android:textColor="#ffffff"
            android:textFontWeight="900"
            android:textSize="44dp" />
    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="AGROPLUS"
        android:textColor="#1C31A8"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="ALTA GENETICS"
        android:textColor="#1C31A8"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="ID"
        android:textColor="@color/black"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTxtNum"
        android:layout_width="217dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDatos"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="104dp"
        android:background="#CDCBCB"
        android:text="Datos"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtToros"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginTop="140dp"
        android:background="#1C31A8"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensajes"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtToros"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="18dp"
        android:background="@mipmap/flecha22_foreground"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/txtDatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.642" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="subirVacas"
        android:text="Subir vacas"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:onClick="subirVaquillas"
        android:text="Subir vaquillas"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#1C31A8"
            android:onClick="onClickDelete"
            android:text="Borrar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#1C31A8"
            android:onClick="onClickArchivo"
            android:text="Datos"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="50sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txtC1"
        android:layout_width="177dp"
        android:layout_height="28dp"
        android:layout_marginTop="3dp"
        android:text=""
        android:textColor="#DDD429"
        android:textStyle="bold"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/txtTn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtToros" />

    <TextView
        android:id="@+id/txtC2"
        android:layout_width="177dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="#DDD429"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/txtTn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtToros" />

    <TextView
        android:id="@+id/txtC3"
        android:layout_width="177dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="70dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="#DDD429"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/txtTn3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtToros" />

    <TextView
        android:id="@+id/txtTn1"
        android:layout_width="177dp"
        android:layout_height="28dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="3dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="#F6F6F4"

        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtToros" />

    <TextView
        android:id="@+id/txtTn2"
        android:layout_width="177dp"
        android:layout_height="28dp"
        android:layout_marginStart="228dp"
        android:textColor="#FBFBF9"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="35dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtToros" />

    <TextView
        android:id="@+id/txtTn3"
        android:layout_width="177dp"
        android:layout_height="28dp"
        android:textColor="#FBFBF9"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="70dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtToros" />

</androidx.constraintlayout.widget.ConstraintLayout>